<h3>Sign up today</h3>

<% if !@errors.nil? %>
  <% if @errors.any? %>
    <div class="row">
      <div class="col-xs-8 col-md-4 col-sm-6 col-lg-4 col-centered alert alert-danger" style="margin: 0 auto 0 auto;">
        <h4>Please review the following errors:</h3>
        <div style="text-align: left; display: inline-block;">
          <ul>
            <% @errors.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <% @errors.clear %>
<% end %>

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-8 col-centered" style="margin-top: 20px; margin-bottom: 20px;">
  <form class="form-signup" method="POST" action="/signup">
    <div class="form-group">
      <input class="form-control" type="text" placeholder="Email" name="email">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" placeholder="Username" name="username">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" placeholder="First Name" name="firstname">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" placeholder="Last Name" name="lastname">
    </div>
    <div class="form-group">
      <input class="form-control" type="password" placeholder="Password" name="password">
    </div>
    <div class="form-group text-left">
      <label for="birthday">Birthday</label>
      <input class="form-control" type="date" name="birthday">
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-lg">Sign Up</button>
  </form>
</div>