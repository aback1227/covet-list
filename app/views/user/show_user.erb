<div class="container">
  <div class="row">
    <div class="col-md-4 panel panel-default text-left" style="padding: 10px">
      <h4 class="text-center"><%=current_user.username%></h4>
      <ul style="list-style: none;">
        <li><label>Name:</label> <%= current_user.firstname%> <%= current_user.lastname%></li>
        <li><label>Birthday:</label> <%= current_user.birthday%></li>
      </ul>
    </div>
    <div class="col-md-8">
        <div class="row" style="margin: 0 10px">
          <% current_user.wishlists.each do |wishlist| %>
            <div class="col-md-12 panel panel-default" style="padding: 0px">
              <div class="panel-heading">
                <a href="/wishlists/<%= wishlist.id %>/wishitems"><%= wishlist.title %></a>
                <div class="edit-glyphicons pull-right">
                  <a href="/wishlists/<%=wishlist.id%>/edit"><span class="glyphicon glyphicon-edit text-danger" aria-hidden="true"></span></a>
                  <a href="/wishlists/<%=wishlist.id%>/delete"><span class="glyphicon glyphicon-trash text-danger" aria-hidden="true"></span></a>
                </div>
              </div>
              <div class="panel-body">
                <%= wishlist.description %>
                <p>Item Count: <%=wishlist.wish_items.count%></p> 
              </div>
            </div>
          <% end %>
        </div><!--row-->
    </div>
  </div>
</div><!--container-->