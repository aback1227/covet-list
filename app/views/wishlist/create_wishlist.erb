<ol class="breadcrumb" style="margin-top: -30px">
  <li><a href="/">Home</a></li>
  <li><a href="/user/<%=current_user.username%>"><%=current_user.username%></a></li>
  <li class="active">Make List</li>
</ol>

<% if !@errors.nil? %>
  <% if @errors.any? %>
    <div class="row">
      <div class="col-xs-8 col-md-4 col-sm-6 col-lg-3 col-centered alert alert-danger" style="margin-left: auto; margin-right: auto; margin-bottom: 20px;">
        <%= @errors[0] %>
      </div>
    </div>
  <% end %>
  <% @errors.clear %>
<% end %>

<div class="col-lg-3 col-md-4 col-sm-6 col-xs-8 col-centered">
  <form method="POST" action="/wishlists">
    <div class="form-group">
      <input class="form-control" type="text" placeholder="Add a title" name="title">
    </div>
    <div class="form-group">
      <textarea class="form-control" type="text" placeholder="Add a description (optional)" name="description" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-lg">Create Wishlist</button>
  </form>
</div>
 


