<ol class="breadcrumb" style="margin-top: -30px">
  <li><a href="/">Home</a></li>
  <li><a href="/user/<%=current_user.username%>"><%=current_user.username%></a></li>
  <li class="active">Edit List</li>
</ol>

<h3>Edit List</h3>

<% if flash[:notice] %>
  <div class="col-xs-8 col-sm-5 col-md-4 col-lg-3 col-centered alert alert-danger" style="margin-bottom: 20px">
    <span><%= flash[:notice] %></span>
  </div>
<% end %>
  
<div class="col-md-4 col-centered" style="padding: 0px 20px 20px 20px">
  <form method="POST" action="/wishlists/<%=current_wishlist.id%>">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <div class="form-group text-left">
      <label for="title">Title</label>
      <input class="form-control" type="text" value="<%=current_wishlist.title%>" name="title">
    </div>
    <div class="form-group text-left">
      <label for="description">Description</label>
      <input class="form-control" type="text" value="<%=current_wishlist.description%>" name="description"></input>
    </div>
    <button type="submit" class="btn btn-primary btn-block btn-sm">Save Changes</button>
  </form>
</div>