<div class="container">
  <div class="row">
    <div class="col-sm-4 col-md-4 panel panel-default" style="margin:0 5px; margin-bottom: 5px">
      <a href="#collapseForm" data-toggle="collapse">Add to list</a>
      <div class="collapse" id="collapseForm" style="padding: 10px">
        <div class="row">
          <div class="col-md-12" style="padding: 10px">
            <form method="POST" action="/wishlists/<%=@wishlist.id%>">
              <div class="form-group">
                <input class="form-control" type="text" placeholder="Add a title" name="title">
              </div>
              <div class="form-group">
                <input class="form-control" type="text" placeholder="Add a url" name="url"></input>
              </div>
              <div class="form-group">
                <input class="form-control" type="integer" placeholder="Add a quantity" name="quantity"></input>
              </div>
              <div class="form-group">
                <input class="form-control" type="integer" placeholder="Add a price" name="price"></input>
              </div>
              <div class="form-group">
                <input class="form-control" type="integer" placeholder="Add a image url" name="image"></input>
              </div>
              <div class="form-group">
                <textarea class="form-control" type="integer" placeholder="Notes" name="note" rows="2"></textarea>
              </div>
              <button type="submit" class="btn btn-primary btn-block btn-sm">Add</button>
            </form>
          </div>
        </div><!--row-->
      </div>
    </div>

    <div class="text-left panel panel-default col-sm-7 col-md-7" style="padding: 10px; margin: 0 5px; margin-bottom: 10px">
      <p><strong>Title:</strong> <%= @wishlist.title %></p>
      <p><strong>Description:</strong> <%= @wishlist.description %></p>

      <div class="row" style="padding: 10px">
        <% @wishlist.wish_items.each do |wishitem| %>
          <div class="col-md-12 panel panel-info" style="padding: 0px">
            <div class="panel-heading">
              <%= wishitem.title %>
              <div class="edit-glyphicons pull-right">
                <form method="POST" action="/wishitems/<%=wishitem.id%>/delete" onsubmit="return confirm('Are you sure you want to delete?')">
                  <a href="/wishitems/<%=wishitem.id%>/edit" class="btn btn-primary btn-xs" role="button"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
                  <input id="hidden" type="hidden" name="_method" value="delete">
                  <input class="btn btn-danger btn-xs" type="submit" name="delete" value="Delete">
                </form>
              </div>
            </div><!--panel-heading-->
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6 col-md-5 col-sm-6 col-xs-6">
                  <img class="img-thumbnail img-fluid" src="<%= wishitem.image %>">
                </div><!--col-md-4-->
                <div class="col-lg-6 col-md-7 col-sm-6 col-xs-6">
                  <ul class="list-unstyled">
                    <li><label>Price:</label> $<%= wishitem.price %></li>
                    <li><label>URL:</label> <a href="<%= wishitem.url %>">Product page</a></li>
                    <li><label>Quantity:</label> <%= wishitem.quantity %></li>
                    <li><label>Note:</label> <%= wishitem.note %></li>
                  </ul>
                </div>
              </div><!--row-->
            </div><!--panel-body-->
          </div><!--col-md-12-->
        <% end %>
      </div>
    </div>
  </div><!--row-->
</div><!--container-->